<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= site.title %></title>
    <% include ../partials/style.ejs %>
  </head>
  <body>
    <div class="classic-layout">
      <header class="classic-navbar">
        <div class="classic-navbar__brand">
          <% if (site?.broker?.photo) { %>
            <img class="classic-navbar__avatar" src="<%= site.broker.photo %>" alt="<%= site?.broker?.full_name || 'Broker' %>" />
          <% } %>
          <span><%= site?.broker?.full_name || 'Broker' %></span>
        </div>
        <nav class="classic-navbar__nav">
          <a class="classic-navbar__link" href="<%= nav.home %>">Home</a>
          <a class="classic-navbar__link" href="<%= nav.properties %>">Properties</a>
          <a class="classic-navbar__link" href="<%= nav.about %>">About</a>
          <a class="classic-navbar__link" href="<%= nav.contact %>">Contact</a>
        </nav>
      </header>
      <main class="classic-container container">
        <section class="hero card">
          <h2 style="margin:0 0 8px">Welcome to <%= site?.broker?.full_name || 'our real estate' %></h2>
          <p class="muted">Explore latest properties.</p>
        </section>
        <section>
          <h3 style="margin:0 0 12px">Featured Properties</h3>
          <div class="grid">
            <% (properties || []).forEach(function(p){ %>
              <div class="card">
                <div><strong><%= p.title %></strong></div>
                <div class="muted"><%= p.city %>, <%= p.state %></div>
              </div>
            <% }); %>
            <% if (!(properties || []).length) { %>
              <div class="muted">No properties yet.</div>
            <% } %>
          </div>
        </section>
      </main>
      <footer class="classic-footer">
        <div class="classic-footer__columns container">
          <div class="classic-footer__col">
            <h4 class="classic-footer__title">Contact</h4>
            <% if (site?.broker?.email) { %>
              <p class="classic-footer__text">Email: <%= site.broker.email %></p>
            <% } %>
          </div>
          <div class="classic-footer__col">
            <h4 class="classic-footer__title">Links</h4>
            <div class="classic-footer__links">
              <a href="<%= nav.home %>">Home</a>
              <a href="<%= nav.properties %>">Find Property</a>
              <a href="<%= nav.about %>">About</a>
              <a href="<%= nav.contact %>">Contact</a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
  </html>


