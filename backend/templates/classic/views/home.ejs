<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= site.title %></title>
    <style>
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; margin: 0; padding: 0; }
      header { padding: 16px; border-bottom: 1px solid #eee; display:flex; align-items:center; justify-content:space-between; }
      nav a { margin-right: 12px; color: #444; text-decoration: none; }
      .wrap { padding: 16px; max-width: 960px; margin: 0 auto; }
      .card { border: 1px solid #eee; border-radius: 8px; padding: 12px; margin-bottom: 12px; }
    </style>
  </head>
  <body>
    <header>
      <strong><%= site.title %></strong>
      <nav>
        <a href="<%= nav.home %>">Home</a>
        <a href="<%= nav.properties %>">Properties</a>
        <a href="<%= nav.about %>">About</a>
        <a href="<%= nav.contact %>">Contact</a>
      </nav>
    </header>
    <div class="wrap">
      <h2>Featured Properties</h2>
      <% if ((properties || []).length === 0) { %>
        <p>No properties yet.</p>
      <% } %>
      <% (properties || []).forEach(function(p){ %>
        <div class="card">
          <div><strong><%= p.title %></strong></div>
          <div><%= p.city %>, <%= p.state %></div>
          <div><small>Area: <%= p.built_up_area || p.area || 'â€”' %> <%= p.area_unit || '' %></small></div>
        </div>
      <% }); %>
    </div>
  </body>
  </html>


