<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= site.title %> • ProClassic</title>
    <%- include('../partials/style.ejs') %>
  </head>
  <body>
    <div class="pc-shell">
      <nav class="pc-navbar">
        <div class="pc-container pc-navbar__row">
          <div class="pc-brand">
            <% if (site && site.broker && site.broker.photo) { %>
              <img class="pc-avatar" src="<%= site.broker.photo %>" alt="<%= (site && site.broker && site.broker.full_name) || 'Broker' %>" />
            <% } %>
            <span><%= (site && site.broker && site.broker.full_name) || 'Broker' %></span>
            <span class="pc-badge">ProClassic</span>
          </div>
          <div class="pc-nav">
            <a class="pc-link" href="<%= nav.home %>">Home</a>
            <a class="pc-link" href="<%= nav.properties %>">Properties</a>
            <a class="pc-link" href="<%= nav.about %>">About</a>
            <a class="pc-link" href="<%= nav.contact %>">Contact</a>
            <a class="pc-link" href="<%= nav.privacy %>">Privacy</a>
            <a class="pc-link" href="<%= nav.terms %>">Terms</a>
          </div>
        </div>
      </nav>

      <header class="pc-hero">
        <div class="pc-container">
          <div class="pc-hero__card">
            <h1 class="pc-hero__title">Find your next home with <%= (site && site.broker && site.broker.full_name) || 'our team' %></h1>
            <p class="pc-hero__subtitle">Curated listings, trusted advice, and seamless closings.</p>
            <a class="pc-cta" href="<%= nav.properties %>">Browse Properties</a>
          </div>
        </div>
      </header>

      <main class="pc-container">
        <section>
          <h3 class="pc-section__title">Featured Properties</h3>
          <div class="pc-grid">
            <% (properties || []).forEach(function(p){ %>
              <div class="pc-card">
                <div class="pc-card__title"><%= p.title %></div>
                <div class="pc-card__meta"><%= p.city %>, <%= p.state %></div>
              </div>
            <% }); %>
            <% if (!(properties || []).length) { %>
              <div class="pc-card"><div class="pc-card__title">No properties yet</div><div class="pc-card__meta">Check back soon.</div></div>
            <% } %>
          </div>
        </section>
      </main>

      <footer class="pc-footer">
        <div class="pc-container pc-footer__grid">
          <div>
            <div class="pc-footer__muted">© <%= new Date().getFullYear() %> <%= (site && site.broker && site.broker.full_name) || 'Broker' %></div>
          </div>
          <div>
            <div class="pc-footer__muted">Email: <%= site && site.broker && site.broker.email || '-' %></div>
          </div>
        </div>
      </footer>
    </div>
  </body>
  </html>


