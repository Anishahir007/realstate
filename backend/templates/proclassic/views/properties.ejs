<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Properties • <%= site.title %></title>
    <%- include('../partials/style.ejs') %>
  </head>
  <body>
    <div class="pc-shell">
      <nav class="pc-navbar">
        <div class="pc-container pc-navbar__row">
          <div class="pc-brand"><span><%= site && site.broker && site.broker.full_name || 'Broker' %></span><span class="pc-badge">ProClassic</span></div>
          <div class="pc-nav">
            <a class="pc-link" href="<%= nav.home %>">Home</a>
            <a class="pc-link" href="<%= nav.properties %>">Properties</a>
            <a class="pc-link" href="<%= nav.about %>">About</a>
            <a class="pc-link" href="<%= nav.contact %>">Contact</a>
          </div>
        </div>
      </nav>

      <main class="pc-container">
        <h2 class="pc-section__title">Available Properties</h2>
        <div class="pc-grid">
          <% (properties || []).forEach(function(p){ %>
            <div class="pc-card">
              <div class="pc-card__title"><%= p.title %></div>
              <div class="pc-card__meta"><%= p.city %>, <%= p.state %></div>
              <% if (p.expected_price) { %>
                <div class="pc-card__meta">Price: ₹<%= p.expected_price %></div>
              <% } %>
              <% if (p.built_up_area && p.area_unit) { %>
                <div class="pc-card__meta">Area: <%= p.built_up_area %> <%= p.area_unit %></div>
              <% } %>
            </div>
          <% }); %>
          <% if (!(properties || []).length) { %>
            <div class="pc-card"><div class="pc-card__title">No properties yet</div></div>
          <% } %>
        </div>
      </main>

      <footer class="pc-footer"><div class="pc-container pc-footer__grid"><div class="pc-footer__muted">©</div></div></footer>
    </div>
  </body>
  </html>


